{
  "model": {
    "name": "gpt-4o",
    "temperature": 0.0,
    "seed": 42
  },
  "ensemble": {
    "enabled": false,
    "members": [
      "direct",
      "reasoning",
      "rules"
    ],
    "disagreement_threshold": 0.3
  },
  "cache": {
    "enabled": true,
    "path": "data\\.cache\\responses.json",
    "ttl_hours": 24
  },
  "parallel": {
    "max_workers": 4,
    "rate_limit": 30,
    "chunk_size": 50
  },
  "evaluation": {
    "enabled": false,
    "gold_set_path": "data\\gold_set.csv",
    "metrics": [
      "accuracy",
      "macro_f1",
      "confusion_matrix"
    ]
  },
  "report": {
    "path": "data\\reports\\latest_summary.json"
  },
  "dedupe": {
    "enabled": true,
    "similarity_threshold": 0.5,
    "canonical_policy": "earliest",
    "report_path": null,
    "soft_similarity_threshold": 0.35,
    "cross_subreddit": true
  },
  "split": {
    "train_ratio": 0.8,
    "val_ratio": 0.1,
    "test_ratio": 0.1,
    "enabled": true
  },
  "resume": {
    "enabled": false,
    "checkpoint_path": null
  },
  "metrics": []
}